
CFLAGS += -Wall -O3 -fopenmp -I $(PREFIX)/include/spooles -DARCH="Linux" -DSPOOLES -DARPACK -DMATRIXSTORAGE -DUSE_MT=1
FFLAGS += -Wall -O3 -fopenmp 

CC=gcc
FC=gfortran

.c.o :
	$(CC) $(CFLAGS) -c $<
.f.o :
	$(FC) $(FFLAGS) -c $<

include Makefile.inc

SCCXMAIN = ccx_2.14.c

OCCXF = $(SCCXF:.f=.o)
OCCXC = $(SCCXC:.c=.o)
OCCXMAIN = $(SCCXMAIN:.c=.o)

DIR=../../../SPOOLES.2.2

LIBS = \
       $(PREFIX)/lib/spoolesMT.a \
       $(PREFIX)/lib/spooles.a \
       $(PREFIX)/lib/libarpack.a \
       $(PREFIX)/lib/liblapack.a \
       -lpthread -lm

ccx_2.14_MT: $(OCCXMAIN) ccx_2.14_MT.a  $(LIBS)
	./date.pl; $(CC) $(CFLAGS) -c ccx_2.14.c; $(FC) -fopenmp -Wall -O3 -o $@ $(OCCXMAIN) ccx_2.14_MT.a $(LIBS)

ccx_2.14_MT.a: $(OCCXF) $(OCCXC)
	ar vr $@ $?
