+++ b/src/Makefile
@@ -9,57 +9,6 @@ SHELL		= /bin/bash
 # enumlib library paths
 LBD1 = ../symlib/src
 
-FOUND = false
-ifeq (${F90},gfortran)  # gfortran compiler
-  ifeq (${DEBUG},false)
-     FFLAGS = -O3 -ffree-line-length-none -fno-underscoring -I${LBD1}
