package:
  name: {{ name|lower }}
  version: {{ version }}

source:
  url: https://pypi.io/packages/source/{{ name[0] }}/{{ name }}/{{ name }}-{{ version }}.tar.gz
  sha256: abac5dcfa871627b7040e6586a69e3359e2dfc4e15dc66135969f2d26fbdcb3b

build:
  number: 0
  noarch: python
  script: rm -f poetry.lock && {{ PYTHON }} -m pip install --no-deps .

requirements:
  build:
    - python >=3.7,<3.9
    - pip
    - poetry >=1.1.11,<2.0.0a
    - poetry-dynamic-versioning >=0.13.1,<0.14.0a
  run:
    # base runtime environment
    - python >=3.7
    - pip

    # boto direct functional dependencies
    - aiobotocore >=2.3.0         # Async core layer for AWS python bindings
    - boto3 >=1.20.0            # AWS API bindings for Python
    - s3transfer >=0.5.0,<0.6.0a  # python module to move files to and from AWS S3

    # General web service infrastructure modules
    - idna >=3.3                 # International Domain Names - for URL host formatting
    - cryptography >=37.0.0        # Python module that provide bindings for data encryption primatives
    - chalice >=1.27.0            # serverless app framework - client side for comms to AWS API

test:
  imports:
    - aioboto3
  requires:
    - pip
  commands:
    - pip check

about:
  home: https://github.com/terrycain/aioboto3
  summary: 'Wrapper to use boto3 resources with the aiobotocore async backend'
  description: |
    aiobotocore allows you to use near enough all of the boto3 client commands in an async manner just by prefixing the command with await.
  home: https://github.com/terrycain/aioboto3
  license: Apache-2.0
  license_file: LICENSE
  license_family: Apache
  doc_url: https://aioboto3.readthedocs.io/en/latest/
  dev_url: https://github.com/terrycain/aioboto3

